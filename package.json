{
    "name": "template-nextjs",
    "version": "1.2.0",
    "description": "A Phaser 3 Next.js project template that demonstrates Next.js with React communication and uses Vite for bundling.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/phaserjs/template-nextjs.git"
    },
    "author": "Phaser Studio <support@phaser.io> (https://phaser.io/)",
    "license": "MIT",
    "licenseUrl": "http://www.opensource.org/licenses/mit-license.php",
    "bugs": {
        "url": "https://github.com/phaserjs/template-nextjs/issues"
    },
    "homepage": "https://github.com/phaserjs/template-nextjs#readme",
    "keywords": [
        "phaser",
        "phaser3",
        "next",
        "nextjs",
        "vite",
        "typescript"
    ],
    "scripts": {
        "dev": "next dev -p 8080",
        "build": "next build",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "deadcode": "knip",
        "deadcode:production": "knip --production",
        "lint": "next lint",
        "dev-nolog": "next dev -p 8080",
        "build-nolog": "next build",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "prepare": "husky",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,js,jsx,json,css,md}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@auth0/nextjs-auth0": "^4.11.1",
        "@neondatabase/serverless": "^1.0.2",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.44.6",
        "next": "15.3.1",
        "next-pwa": "^5.6.0",
        "pg-mem": "^3.0.5",
        "phaser": "^3.90.0",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "sonner": "^2.0.7",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^20.19.17",
        "@types/pg": "^8.15.6",
        "@types/react": "^19.1.15",
        "@types/react-dom": "^19.1.9",
        "@types/ws": "^8.18.1",
        "drizzle-kit": "^0.31.5",
        "eslint-config-next": "^15.5.4",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "knip": "^5.70.2",
        "lint-staged": "^16.2.3",
        "pg": "^8.16.3",
        "pg-promise": "^12.3.0",
        "postgres": "^3.4.7",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2"
    }
}
